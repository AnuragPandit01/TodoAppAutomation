<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TodoAppAutomationSuite">
    <listeners>
        <listener class-name="com.anuragpandit.tests.ExtentReportListener"/>
    </listeners>
    <test name="ChromeTests">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.anuragpandit.tests.TodoTest"/>
        </classes>
    </test>
    <test name="FirefoxTests">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.anuragpandit.tests.TodoTest"/>
        </classes>
    </test>
</suite>
